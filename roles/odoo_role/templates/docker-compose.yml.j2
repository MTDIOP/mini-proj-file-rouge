version: "3.9"
services:
  {{ odoo_service_name }}:
    image: odoo:latest
    container_name: {{ odoo_container_name }}
    environment:
      - POSTGRES_DB=odoo
      - POSTGRES_USER=odoo
      - POSTGRES_PASSWORD=odoo
    ports:
      - "8069:8069"
    networks:
      - {{ odoo_network_name }}
    volumes:
      - {{ odoo_data_path }}:/var/lib/odoo

networks:
  {{ odoo_network_name }}:
    driver: bridge

volumes:
  {{ odoo_volume_name }}:
